#
# NMAKE Makefile to create libspatialite-amalgamation on Windows
#

AMALGAMATE_EXE         =	amalgamate.exe

default:	all

all: $(AMALGAMATE_EXE)

$(AMALGAMATE_EXE): amalgamate.obj
	cl amalgamate.obj \
		/Fe$(AMALGAMATE_EXE)
	if exist $(AMALGAMATE_EXE).manifest mt -manifest \
		$(AMALGAMATE_EXE).manifest -outputresource:$(AMALGAMATE_EXE);1

clean:
	del *.exe
	del *.obj